{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "jsx": "react",
    "jsxFactory": "JSXEngine.run",
    "outDir": "./out",
    "rootDirs": [
      "./",
      "../"
    ],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "../lib/**/*",
    "./*"
  ],
  "exclude": [
    "**/node_modules/**/*"
  ]
}